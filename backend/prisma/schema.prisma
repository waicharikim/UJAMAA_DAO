// Prisma schema for UjamaaDAO backend DB v1.0

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  walletAddress  String    @unique
  email          String    @unique
  name           String
  constituency   String
  county         String
  industry       String?
  goodsServices  String[]
  groups         GroupMember[]

  proposals      Proposal[] @relation("UserProposals")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Group {
  id              String        @id @default(uuid())
  name            String        @unique
  description     String?
  walletAddress   String        @unique
  constituency    String
  county          String
  industryFocus   String
  productsServices String[]
  members         GroupMember[]
  proposals       Proposal[]    @relation("GroupProposals")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model GroupMember {
  id       String  @id @default(uuid())
  user     User    @relation(fields: [userId], references: [id])
  userId   String
  group    Group   @relation(fields: [groupId], references: [id])
  groupId  String
  role     GroupRole @default(MEMBER)
  joinedAt DateTime @default(now())

  @@unique([userId, groupId])
}

model County {
  id           String         @id @default(uuid())
  name         String         @unique
  constituencies Constituency[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Constituency {
  id        String   @id @default(uuid())
  name      String
  county    County   @relation(fields: [countyId], references: [id])
  countyId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, countyId])
}

enum GroupRole {
  ADMIN
  MEMBER
}

model Proposal {
  id             String    @id @default(uuid())
  title          String
  description    String
  proposalType   ProposalType
  funded         Boolean
  budget         Int?
  timeline       String?
  locationScope  LocationScope
  constituency   String?
  county         String?
  purposeDetails Json?     // Flexible JSON for business/nonprofit/bill details
  status         ProposalStatus @default(DRAFT)
  creatorUser    User?     @relation("UserProposals", fields: [creatorUserId], references: [id])
  creatorUserId  String?
  creatorGroup   Group?    @relation("GroupProposals", fields: [creatorGroupId], references: [id])
  creatorGroupId String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum ProposalType {
  BUSINESS
  NON_PROFIT
  BILL
}

enum LocationScope {
  LOCAL
  COUNTY
  NATIONAL
}

enum ProposalStatus {
  DRAFT
  VOTING
  APPROVED
  REJECTED
  EXECUTING
  COMPLETED
}

model Vote {
  id          String   @id @default(uuid())
  proposalId  String
  voterId     String   // either userId or groupId
  isGroup     Boolean
  vote        Boolean
  tokensSpent Int
  createdAt   DateTime @default(now())

  @@index([proposalId])
}

model TokenBalance {
  id        String   @id @default(uuid())
  holderType HolderType   // enum: USER or GROUP
  holderId  String            // user.id or group.id depending on holderType
  balance   Int          @default(0)   // token amount available
  updatedAt DateTime     @updatedAt

  @@unique([holderType, holderId])
}

enum HolderType {
  USER
  GROUP
}