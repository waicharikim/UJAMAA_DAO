{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ES2020",
      "moduleResolution": "node",
      "sourceMap": true,  
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
    },


    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.mts"]
  }